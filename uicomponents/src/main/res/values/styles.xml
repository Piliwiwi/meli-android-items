<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UiDefaultColorStyle">
        <item name="android:textColor">@color/ui_black</item>
    </style>

    <style name="UiFontTitle" parent="UiDefaultColorStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/ui_font_16</item>
    </style>

    <style name="UiFontValue" parent="UiDefaultColorStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/ui_font_20</item>
    </style>

    <style name="UiFontInfo">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/ui_font_12</item>
        <item name="android:textColor">@color/ui_green</item>
    </style>

    <style name="UiFontHighlightInfo">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/ui_font_12</item>
        <item name="android:textColor">@color/ui_green</item>
    </style>

    <style name="UiFontSubtitle" parent="UiDefaultColorStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/ui_font_12</item>
    </style>

    <style name="UiFontAdditionalInfo">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/ui_font_12</item>
        <item name="android:textColor">@color/ui_light_gray</item>
    </style>
</resources>